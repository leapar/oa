<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.purvar.ito.oa.web.record.RecordEdit"
        datasource="recordDs"
        focusComponent="fieldGroup"
        messagesPack="com.purvar.ito.oa.web.record">
    <dsContext>
        <datasource id="recordDs"
                    class="com.purvar.ito.oa.entity.Record"
                    view="record-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <split height="100%"
               orientation="vertical"
               pos="200px"
               width="100%">
            <vbox spacing="true">
                <hbox spacing="true">
                    <fieldGroup id="fieldGroup"
                                datasource="recordDs"
                                editable="false"
                                height="150px">
                        <column width="400px">
                            <field caption="姓名"
                                   editable="false"
                                   property="user"/>
                            <field caption="省份"
                                   editable="false"
                                   property="province"/>
                            <field caption="城市"
                                   editable="false"
                                   property="district"/>
                            <field caption="地址"
                                   editable="false"
                                   property="address"/>
                        </column>
                    </fieldGroup>
                    <fieldGroup id="fieldgroup_1"
                                datasource="recordDs"
                                editable="false"
                                height="150px">
                        <column width="250px">
                            <field caption="打卡时间"
                                   dateFormat="msg://dateTimeFormat"
                                   editable="false"
                                   property="createTs"/>
                            <field editable="false"
                                   property="ip"
                                   visible="false"/>
                            <field caption="纬度"
                                   editable="false"
                                   property="lat"/>
                            <field caption="经度"
                                   editable="false"
                                   property="lng"/>
                        </column>
                    </fieldGroup>
                </hbox>
                <hbox spacing="true">
                    <upload id="upload"
                            accept="*.jpg,*.png"
                            permittedExtensions=".jpg,.jpeg,.png,.gif"
                            visible="false"/>
                    <button id="button"
                            caption="Close"
                            invoke="onButtonClick"
                            width="100px"/>
                    <frame screen="editWindowActions"
                           visible="false"/>
                </hbox>
            </vbox>
            <split height="100%"
                   orientation="horizontal"
                   pos="50%"
                   width="100%">
                <scrollBox>
                    <embedded id="embedded"
                              width="100%"/>
                </scrollBox>
                <scrollBox>
                    <embedded id="map"
                              height="600px"
                              src="url://https://doc.cuba-platform.com/manual-latest/index.html"
                              type="BROWSER"
                              width="100%"/>
                </scrollBox>
            </split>
        </split>
    </layout>
</window>
