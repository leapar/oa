<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.purvar.ito.oa.web.record.RecordBpmEdit"
        datasource="recordDs"
        focusComponent="fieldGroup"
        messagesPack="com.purvar.ito.oa.web.record">
    <dsContext>
        <datasource id="recordDs"
                    class="com.purvar.ito.oa.entity.Record"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="recordDs">
            <column width="250px">
                <field property="lat"/>
                <field property="lng"/>
                <field property="district"/>
                <field property="province"/>
                <field property="address"/>
                <field property="ip"/>
                <field property="bpm_flag"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
