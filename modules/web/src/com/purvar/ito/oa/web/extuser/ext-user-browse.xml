<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.purvar.ito.oa.web.extuser.ExtUserBrowse"
        extends="/com/haulmont/cuba/gui/app/security/user/browse/user-browse.xml"
        messagesPack="com.purvar.ito.oa.web.extuser"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd">
    <layout>
        <groupTable id="usersTable">
            <columns>
                <column id="login"
                        caption="账号"/>
                <column id="name"
                        caption="姓名"/>
                <column id="position"
                        visible="false"/>
                <column id="group"
                        sortable="false"
                        visible="false"/>
                <column id="email"
                        sortable="false"
                        visible="false"/>
                <column id="timeZone"
                        sortable="false"
                        visible="false"/>
                <column id="active"
                        visible="false"/>
                <column id="company"
                        caption="公司"
                        ext:index="7"/>
                <column id="status"
                        caption="状态"
                        ext:index="8"/>
                <column id="type"
                        caption="类型"
                        ext:index="9"/>
                <column id="area"
                        caption="区域"
                        ext:index="10"/>
                <column id="changePasswordAtNextLogon"
                        visible="false"/>
            </columns>
            <buttonsPanel>
                <button id="userTableCopyButton"
                        caption="复制"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
